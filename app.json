{
  "expo": {
    "name": "Huda-AlQuran",
    "slug": "Huda-AlQuran",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#065F46"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.huda.alquran"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#065F46"
      },
      "package": "com.huda.alquran"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "يستخدم هذا التطبيق الموقع لتحديد مواقيت الصلاة بدقة.",
          "locationAlwaysPermission": "يستخدم هذا التطبيق الموقع لتحديد مواقيت الصلاة بدقة.",
          "locationWhenInUsePermission": "يستخدم هذا التطبيق الموقع لتحديد مواقيت الصلاة بدقة.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
